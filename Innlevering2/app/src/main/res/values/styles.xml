<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTabBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title"></item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTabUnderline</item>
        <item name="tabIndicatorHeight">6dp</item>
        <item name="tabPaddingStart">14dp</item>
        <item name="tabPaddingEnd">14dp</item>
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTabText</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTabText</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
