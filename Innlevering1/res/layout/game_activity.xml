<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="20px">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player X:"
            android:id="@+id/textView"
            android:layout_marginTop="35dp" android:layout_alignParentTop="true"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player O:"
            android:id="@+id/textView2" android:layout_alignTop="@+id/textView" android:layout_alignParentEnd="true"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#000000"
                 android:stretchColumns="*"
                 android:layout_below="@+id/textView" android:layout_alignParentStart="true"
                 android:layout_marginTop="90dp">

        <TableRow
                android:layout_margin="1dp" android:background="#ffffff">
            <TextView
                    android:layout_column="0"
                    android:text="A1"
                    android:gravity="start"
                    android:padding="45dip" />
            <TextView
                    android:text="A2"
                    android:gravity="center_horizontal"
                    android:padding="45dip" android:layout_column="1"/>
            <TextView
                    android:text="A3"
                    android:gravity="end"
                    android:padding="45dip" android:layout_column="2"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_column="0"
                    android:text="B1"
                    android:gravity="start"
                    android:padding="45dip" />
            <TextView
                    android:text="B2"
                    android:gravity="center_horizontal"
                    android:padding="45dip" />
            <TextView
                    android:text="B3"
                    android:gravity="end"
                    android:padding="45dip"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_column="0"
                    android:text="C1"
                    android:gravity="start"
                    android:padding="45dip"/>
            <TextView
                    android:text="C2"
                    android:gravity="center_horizontal"
                    android:padding="45dip" />
            <TextView
                    android:text="C3"
                    android:gravity="end"
                    android:padding="45dip"/>
        </TableRow>


    </TableLayout>
</RelativeLayout>